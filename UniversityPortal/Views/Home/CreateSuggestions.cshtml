@model UniversityPortal.Models.SuggestionsModel

@{
    ViewData["Title"] = "CreateSuggestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateSuggestions</h1>

<h4>SuggestionsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSuggestions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GrievanceId" class="control-label"></label>
                @Html.DropDownListFor(model => model.GrievanceId, (IEnumerable<SelectListItem>)ViewBag.Gravience, "Select" , new {@class = "form-control" })
                <span asp-validation-for="GrievanceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Problem" class="control-label"></label>
                <input asp-for="Problem" class="form-control" />
                <span asp-validation-for="Problem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
