@model UniversityPortal.Models.SignUpUserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>University Login</title>
    <link rel="stylesheet" type="text/css" href="~/Dummy/assets/css/signupcss.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <img class="wave" src="~/Dummy/assets/img/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/Dummy/assets/img/bg.svg">
        </div>
        <div class="login-content">
            <form method="post" asp-action="Signup">


                <img src="~/Dummy/assets/img/avatar.svg">
                <h3>University</h3>

                <br>


                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Firstname</h5>
                        <input asp-for="FirstName" name="FirstName" type="text" class="input form-control">
                    </div>



                </div>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Lastname</h5>
                        <input type="text" asp-for="LastName" class="input" asp-validation-for="LastName">
                    </div>
                </div>


                <div class="input-div one">
                    <div class="i">
                        <i class="fal fa-calendar-check  "></i>
                    </div>

                    <div class="div">
                        <h5>DateofBirth</h5>
                        <input type="date" asp-for="DateOfBirth" class="input" asp-validation-for="DateOfBirth">
                    </div>
                </div>



                <div class="input-div one">
                    <div class="i">
                        <i class="ffa fa-neuter"></i>
                    </div>

                    <div class="div">
                        <h5>Gender</h5>
                        <input type="text" asp-for="Gender" class="input" required>
                    </div>
                </div>


                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-mobile"></i>
                    </div>

                    <div class="div">
                        <h5>Mobile.No</h5>
                        <input type="tel" asp-for="ContactNo" class="input" required>
                    </div>
                </div>

                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-mobile"></i>
                    </div>

                    <div class="div">
                        <h5>User ID</h5>
                        <input type="number" asp-for="UserId" class="input" required>
                    </div>
                </div>


                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-paper-plane"></i>
                    </div>
                    <div class="div">
                        <h5>Email</h5>
                        <input type="email" asp-for="Email" class="input" required>
                    </div>
                </div>


                <!------------------------------------------------------>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input type="password" asp-for="Password" class="input">
                    </div>
                </div>


                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>ConfirmPassword </h5>
                        <input type="password" asp-for="ConfirmPassword" class="input">
                    </div>
                </div>


                <input type="submit" class="btn" name="Submit" value="Signup">

                <div>
                    <p>Click <a asp-action="Login" asp-controller="Account">here</a> to Login</p>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/Dummy/assets/js/loginmain.js"></script>


</body>
</html>




