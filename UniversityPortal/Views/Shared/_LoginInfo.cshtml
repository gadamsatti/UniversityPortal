@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
<ul class="navbar-nav">
    @if (_signInManager.IsSignedIn(User))
    {

     
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Profile" class="nav-link  btn btn-link text-dark">Hello, @User.FindFirst("UserFirstName").Value</a>
        </li>

        <li class="nav-item">
            <a asp-action="Logout" asp-controller="Account" class="nav-link btn btn-link text-dark">Logout</a>
        </li>
        <li class="nav-item">
            <a asp-action="ChangePassword" asp-controller="Account" class="nav-link btn btn-link text-dark">Change Password</a>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" class="nav-link text-dark" asp-routr-returnUrl="@Context.Request.Path">Login</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="signup" class="nav-link text-dark">Signup</a>
        </li>


    }
</ul>



